{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "-A",
        "-c",
        "tsconfig.json",
        "./day2-necklace/index.ts"
        // "${file}"
      ],
      "outputCapture": "std",
      "attachSimplePort": 9229,
      "skipFiles": [
        "node_modules/**/*.js",
      ],
    }
  ]
}